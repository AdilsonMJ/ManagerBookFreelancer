<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.professionalForm.FormNewProfessionalFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/FildEditTextName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:hint="@string/hint_form_new_professional_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="20"
            android:inputType="textPersonName" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/FildEditTextEmail"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:hint="@string/hint_form_new_profissional_email"
        app:layout_constraintEnd_toEndOf="@+id/FildEditTextName"
        app:layout_constraintStart_toStartOf="@+id/FildEditTextName"
        app:layout_constraintTop_toBottomOf="@+id/FildEditTextName">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="35"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/FildEditTextCellphone"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:hint="@string/hint_form_new_profissional_cellphone"
        app:layout_constraintEnd_toEndOf="@+id/FildEditTextEmail"
        app:layout_constraintStart_toStartOf="@+id/FildEditTextEmail"
        app:layout_constraintTop_toBottomOf="@+id/FildEditTextEmail">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextCellphone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="12"
            android:inputType="phone" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/BTNRecyclerViewNewProfessional"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_border"
        android:text="@string/form_New_Professional_Btn_Save"
        android:textSize="16sp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FildEditTextCellphone" />



</androidx.constraintlayout.widget.ConstraintLayout>