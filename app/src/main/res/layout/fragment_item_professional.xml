<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="20dp"
    android:background="@color/teal_200">

    <TextView
        android:id="@+id/TVNameProfessional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nilton Reis"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVCellphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:hint="9999995999"
        android:inputType="phone"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/TVNameProfessional"
        app:layout_constraintStart_toEndOf="@+id/TVNameProfessional" />

    <TextView
        android:id="@+id/TVEmailProfessional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:contentDescription="Email"
        android:hint="niltonReais@gmail.com"
        android:inputType="textEmailAddress"
        android:linksClickable="true"
        android:phoneNumber="true"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/TVNameProfessional"
        app:layout_constraintTop_toBottomOf="@+id/TVNameProfessional" />
</androidx.constraintlayout.widget.ConstraintLayout>