<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="20dp"
    style="@style/Base.CardView"
    android:background="@color/teal_200">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvItemProfessionalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nilton Reis" />

        <TextView
            android:id="@+id/tvItemProfessionalCellphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            tools:text="9999995999"
            android:autoLink="phone"
            android:textSize="24sp"
            android:height="48dp"
            android:linksClickable="true"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvItemProfessionalName"
            app:layout_constraintStart_toEndOf="@+id/tvItemProfessionalName" />

        <TextView
            android:id="@+id/tvItemProfessionalEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:height="48dp"
            android:maxHeight="20dp"
            tools:text="niltonReais@gmail.com"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/tvItemProfessionalName"
            app:layout_constraintTop_toBottomOf="@+id/tvItemProfessionalName" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>