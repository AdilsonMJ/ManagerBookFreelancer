<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ManagerBookFreelancer" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#6200EE</item>
        <!-- Customize your theme here. -->
        <item name="android:homeAsUpIndicator">@drawable/btn_back</item>

    </style>

    <style name="CardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardElevation">5dp</item>
        <item name="cardMaxElevation">7dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">30dp</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>
    <style name="Theme.ManagerBookFreelancer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.ManagerBookFreelancer.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.ManagerBookFreelancer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>